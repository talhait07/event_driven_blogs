<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Post</th>
      <th>User</th>
      <th>Is removed</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post[:title] %></td>
        <td><%= post[:post] %></td>
        <td><%= post[:user_id] %></td>
        <td><%= post[:is_removed] %></td>
        <td><%= link_to 'Show', post_path(post[:id]) %></td>
        <td><%= link_to 'Edit', edit_post_path(post[:id]) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
